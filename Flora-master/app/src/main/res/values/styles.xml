<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <item name="android:windowAnimationStyle">@style/windowAnim</item>
        <item name="android:windowBackground">@mipmap/bg_splash</item>
    </style>

    <style name="lightness" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryLight_">@color/colorPrimaryLight</item>
        <item name="colorPrimaryText_">@color/colorPrimaryText</item>
        <item name="colorSecondaryText_">@color/colorSecondaryText</item>
        <item name="colorDivider_">@color/colorDivider</item>
        <item name="colorText_">@color/colorText</item>
    </style>

    <style name="darkness" parent="AppTheme">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorPrimaryLight_">@color/darkPrimaryLight</item>
        <item name="colorPrimaryText_">@color/darkPrimaryText</item>
        <item name="colorSecondaryText_">@color/darkSecondaryText</item>
        <item name="colorDivider_">@color/darkDivider</item>
        <item name="colorText_">@color/darkText</item>
    </style>

    <style name="windowAnim" parent="android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_in</item>
    </style>
</resources>
