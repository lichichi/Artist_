<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawableTextView">
        <attr name="drawable_src" format="reference" />
        <attr name="drawable_height" format="dimension" />
        <attr name="drawable_width" format="dimension" />
        <attr name="drawable_location">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>

    <attr name="colorPrimaryLight_" format="color|reference" />
    <attr name="colorPrimaryText_" format="color|reference" />
    <attr name="colorSecondaryText_" format="color|reference" />
    <attr name="colorDivider_" format="color|reference" />
    <attr name="colorText_" format="color|reference" />
</resources>